{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"type": "docs", "scope": "README", "release": "patch"},
        {"type": "refactor", "release": "patch"},
        {"type": "style", "release": "patch"},
        {"type": "chore", "scope": "deps", "release": "patch"}
      ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
      }
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "ðŸš€ Features"},
          {"type": "fix", "section": "ðŸ› Bug Fixes"},
          {"type": "perf", "section": "âš¡ Performance"},
          {"type": "revert", "section": "âª Reverts"},
          {"type": "docs", "section": "ðŸ“ Documentation"},
          {"type": "style", "section": "ðŸ’„ Styling"},
          {"type": "refactor", "section": "â™»ï¸ Code Refactoring"},
          {"type": "test", "section": "âœ… Tests"},
          {"type": "build", "section": "ðŸ—ï¸ Build System"},
          {"type": "ci", "section": "ðŸ‘· CI/CD"},
          {"type": "chore", "section": "ðŸ”§ Maintenance"}
        ]
      }
    }],
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md"
    }],
    ["@semantic-release/npm", {
      "npmPublish": false
    }],
    ["@semantic-release/github", {
      "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on [GitHub release](${releases.filter(release => Boolean(release.name)).find(release => release.name === `v${nextRelease.version}`).url})",
      "labels": false,
      "releasedLabels": false,
      "addReleases": "bottom"
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md", "package.json", "package-lock.json"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }]
  ]
}